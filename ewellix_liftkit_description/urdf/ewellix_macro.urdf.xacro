<?xml version="1.0"?>
<robot name="ewellix_lift_700mm" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- TODO turn this into a macro-->

<xacro:property name="M_PI" value="3.1415926535897931" />
    
  <link name="ewellix_lift_base_link">

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find ewellix_liftkit_description)/meshes/visual/ewellix_lift_base_700mm.stl"/>
      </geometry>
      <material name="grey">
        <color rgba="0.7 0.7 0.7 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="-0.005 0 0.00235" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find ewellix_liftkit_description)/meshes/visual/ewellix_lift_base_700mm.stl"/>
      </geometry>
    </collision>

  </link>

  <!-- Lift top link -->
  <link name="ewellix_lift_top_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find ewellix_liftkit_description)/meshes/visual/ewellix_lift_top_700mm.stl"/>
      </geometry>
      <material name="grey">
        <color rgba="0.7 0.7 0.7 1"/>
      </material>
    </visual>

    <!-- TODO figure out how to retract the top link entirely without it colliding through the base. Consider splitting the top into two pieces with a mimic joint-->
    <collision>
      <origin xyz="-0.005 0 0.00235" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find ewellix_liftkit_description)/meshes/visual/ewellix_lift_top_700mm.stl"/>
      </geometry>
    </collision>

  </link>

  <!-- Lift top link joint -->
  <joint name="ewellix_lift_top_joint" type="prismatic">
    <parent link="ewellix_lift_base_link"/>
    <child link="ewellix_lift_top_link" />
    <origin xyz="0 0 0.730" rpy="0 0 0" />
    <limit effort="1000" lower="0.0" upper="0.7" velocity="0.088"/>
    <axis xyz="0 0 1" /> 
  </joint>


  
</robot>